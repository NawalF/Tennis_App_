@model List<TennisCoach.Models.Coaches>

<h2 style="font-family: Arial, sans-serif; color: #2c3e50; text-align: center;">Welcome Back !</h2>

<div style="display: flex; justify-content: center; flex-wrap: wrap; gap: 20px;">
    <div style="background-color: #ecf0f1; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); width: 300px; text-align: center;">
        <h5 style="font-size: 18px; font-weight: bold; color: #34495e;">
            <i class="fas fa-user-graduate" style="margin-right: 8px;"></i> View Coach Profiles
        </h5>
        <p style="font-size: 14px; color: #7f8c8d;">Coaches</p>
        <a href="@Url.Action("Coaches","Member" )" style="font-size: 14px; color: #3498db; text-decoration: none;">View Coaches</a>
    </div>

   

    <div style="background-color: #ecf0f1; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); width: 300px; text-align: center;">
        <h5 style="font-size: 18px; font-weight: bold; color: #34495e;">
            <i class="fas fa-calendar-alt" style="margin-right: 8px;"></i> Schedules
        </h5>
        <p style="font-size: 14px; color: #7f8c8d;">Check upcoming schedules</p>
        <a href="@Url.Action("Schedules", "Member")" style="font-size: 14px; color: #3498db; text-decoration: none;">Go to Schedules</a>
    </div>


    <div style="background-color: #ecf0f1; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); width: 300px; text-align: center;">
        <h5 style="font-size: 18px; font-weight: bold; color: #34495e;">
            <i class="fas fa-check-circle" style="margin-right: 8px;"></i> Enroll in Schedules
        </h5>
        <p style="font-size: 14px; color: #7f8c8d;">Join a schedule before the date</p>
        <a href="@Url.Action("Enroll", "Member")" style="font-size: 14px; color: #3498db; text-decoration: none;">Enroll Now</a>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-controller="Home" asp-action="Index" class="btn" style="background-color: #2c3e50; border: none; padding: 10px 20px; border-radius: 4px; color: white; font-size: 16px; cursor: pointer;">Logout</a>
</div>
