@model TennisCoach.Models.AdminLoginViewModel

<div style="font-family: Arial, sans-serif; color: #2c3e50; max-width: 400px; margin: 40px auto; padding: 20px; background-color: #ecf0f1; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h2 style="text-align: center; color: #34495e;">Admin Login</h2>
    <form asp-action="LoginAdmin" method="post">
        <div class="form-group">
            <label for="Email" style="font-size: 16px; color: #34495e;">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required style="padding: 10px; border-radius: 4px; border: 1px solid #bdc3c7;">
        </div>

        <div class="form-group">
            <label for="Password" style="font-size: 16px; color: #34495e;">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" required style="padding: 10px; border-radius: 4px; border: 1px solid #bdc3c7;">
        </div>

        <button type="submit" style="background-color: #3498db; border: none; padding: 10px 20px; border-radius: 4px; color: white; font-size: 16px; cursor: pointer; width: 100%;">Login</button>
    </form>
</div>



